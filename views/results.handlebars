<div class="jumbotron text-center">
	<h1 id="headline" class="display-3">Scrape-N-Store</h1>
</div>

<div class="row">
	<div class="col-md-12 articleBody">
		<div id="scrapedHeader" class="panel-heading header">
			<h3 class="panel-title">Scraped Articles</h3>
		</div>
		<div class="panel-body border" id="scrapedArticles">
			<!-- list of articles goes here -->
			<div class="container articleTable">
			<table class="table">
				
				{{#if articles}}
					{{#each articles}}
					<thead>
					<tr>
						<th class="panel-title tdHeaders"><a href="{{this.link}}" target="_blank">{{this.headline}}</a></th>
						<th class="panel-title tdHeaders"> </th>
					</tr>
					</thead>

					<tbody class="table">
					<tr>
						<td class="panel-body border">{{this.summary}}</td>
						<td>
							<form action="/id/{{this._id}}?_method=PUT" method="POST">
								<button type="submit" class="btn btn-default">Save</button>
							</form>
						</td>
					</tr>
					
					{{/each}}
					{{else}}
					<td class="text-center panel-title tdHeaders">No articles here</td>
					{{/if}}
				</tbody>
			</table>
			</div>

		</div>
	</div>
	<a id="back-to-top" href="#" class="btn btn-primary btn-lg back-to-top" role="button" title="Click to return on the top page" data-toggle="tooltip" data-placement="right"><span class="glyphicon glyphicon-chevron-up"></span></a>

</div>